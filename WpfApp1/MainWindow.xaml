        <TextBox x:Name="tbWEK" HorizontalAlignment="Left" Height="30" Margin="105,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" TextAlignment="Right" BorderBrush="#FFF07D0A" TextChanged="TbWEK_TextChanged" Background="#FF333951" Foreground="#FFD4D4D4" FontSize="20"/>
        <TextBox x:Name="tbWED" HorizontalAlignment="Left" Height="30" Margin="100,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" TextAlignment="Right" BorderBrush="#FF00FF64" TextChanged="TbWED_TextChanged" Background="#FF333951" Foreground="#FFD4D4D4" FontSize="20"/>

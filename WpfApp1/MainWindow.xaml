        <Label x:Name="lbClose" Content="X" HorizontalAlignment="Left" Margin="266,-4,0,0" VerticalAlignment="Top" Foreground="#FF4EB8CE" FontWeight="Bold" FontSize="18"/>
        <Label x:Name="lbSeparador_Copy" Content="_________________________________________________________________________________________________________________________________" HorizontalAlignment="Left" Margin="-9,11,-53,0" VerticalAlignment="Top" Foreground="#FFD4D4D4" Width="355" FontSize="11"/>


<Window x:Class="WpfApp1.finestraDataGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Historial" Height="450" Width="1250" Icon="HuntProfitIcon.ico">
    <Grid Background="#FF222431">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="HistorialHunts" HorizontalAlignment="Left" Height="350" Margin="20,30,0,0" VerticalAlignment="Top" Width="1200" HorizontalScrollBarVisibility="Visible" IsReadOnly="True" Background="#FFBBC7FB" BorderBrush="#FF4EB8CE" Foreground="Black" HeadersVisibility="Column">
            <!-- Style -->
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#FF4EB8CE"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderThickness" Value="0,0,1,2"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="#FFBBC7FB"/>
                    <Setter Property="BorderThickness" Value="0,0,0.4,0.4"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
            </DataGrid.Resources>

            <!-- Colum Headers text & bindings-->
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="25" Binding="{Binding HuntID}"/>
                <DataGridTextColumn Header="Respawn" Width="75" Binding="{Binding Respawn}"/>
                <DataGridTextColumn Header="Day" Width="40" Binding="{Binding Dia}"/>
                <DataGridTextColumn Header="Pers" Width="26" Binding="{Binding Persones}"/>
                <DataGridTextColumn Header="W.EK" Width="70" Binding="{Binding WasteEK}"/>
                <DataGridTextColumn Header="W.ED" Width="70" Binding="{Binding WasteED}"/>
                <DataGridTextColumn Header="W.RP" Width="70" Binding="{Binding WasteRP}"/>
                <DataGridTextColumn Header="W.MS" Width="70" Binding="{Binding WasteMS}"/>
                <DataGridTextColumn Header="W.Total" Width="70" Binding="{Binding TotalWaste}"/>
                <DataGridTextColumn Header="Loot" Width="80" Binding="{Binding Loot}"/>
                <DataGridTextColumn Header="Balance" Width="80" Binding="{Binding Balance}"/>
                <DataGridTextColumn Header="Profit/e" Width="80" Binding="{Binding ProfitEach}"/>
                <DataGridTextColumn Header="T.EK" Width="80" Binding="{Binding TransferEK}"/>
                <DataGridTextColumn Header="T.ED" Width="80" Binding="{Binding TransferED}"/>
                <DataGridTextColumn Header="T.RP" Width="80" Binding="{Binding TransferRP}"/>
                <DataGridTextColumn Header="T.MS" Width="80" Binding="{Binding TransferMS}"/>
                <DataGridTextColumn Header="Pagat" Width="40" Binding="{Binding Pagat}"/>
                <DataGridTemplateColumn Header="PAGAR" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="buttonPagar" Click="buttonPagar_Click" Content="Pagar!"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
